---
import type { Article } from "../types";
import { fetchArticles } from "../fetch";
import Layout from "../layouts/Layout.astro";
import { formatDate } from '../utils'

export const prerender = false;
const articles: Article[] = await fetchArticles();

function getRecap(content: string, length: number) {
  return content.slice(0, length) + "[ ...]";
}


const store = import.meta.env.MEDIA_STORE
---

<Layout>

  <ul class="articles-list">
    {articles.length > 0 ? articles.map((article: Article) => (
      <li class="article-card">
        <a href={`/articles/${article.id}`} class="article-link">
          {article.image ? <img src={`${store}/${article.image.filename}`} alt={article.title} class="article-image" />
          : null}
          <div class="article-content">
            <h2>{article.title}</h2>
            <p class="article-date">{formatDate(article.date)}</p>
            <div class="rich-text" set:html={getRecap(article.content_html, 200)}></div>
          </div>
        </a>
      </li>
    )) : <p>Il n'y a pas d'actus</p>}
  </ul>


</Layout>

<style>
    /* ARTICLES */
    .articles-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: var(--size-6); /* ðŸ”¹ Espacement entre les cartes */
    }

    .article-card {
        background: var(--gray-0);
        border-radius: var(--radius-3);
        box-shadow: var(--shadow-4);
        transition: transform 0.3s ease-in-out;
        overflow: hidden;
    }

    .article-card:hover {
        transform: scale(1.02);
    }

    .article-link {
        display: flex; /* ðŸ”¹ Transforme <a> en bloc flex */
        text-decoration: none;
        color: inherit;
        width: 100%;
        height: 100%;
    }

    .article-image {
        width: 150px;
        height: 100px;
        object-fit: cover;
        border-top-left-radius: var(--radius-3);
        border-bottom-left-radius: var(--radius-3);
    }

    .article-content {
        padding: var(--size-4);
        flex: 1;
    }


</style>