---
import 'open-props/style'
---

<style is:global>

    * {
        box-sizing: border-box;
        max-width: 100%;
    }

    html, body {
        margin: 0;
        padding: 0;
        width: 100vw;
        height: 100%;
        display: flex;
        flex-direction: column;
        scroll-behavior: smooth;
        background-color: var(--gray-2);
        color: var(--gray-9);
        font-family: var(--font-sans), serif;
        overflow-x: hidden;
    }


    .page-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .content {
        flex: 1;
    }


    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--size-4);
    }


    .header-container {
        position: relative;
    }


    /* Contenu */
    main {
        padding: var(--size-5);
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        row-gap: var(--size-6);
    }

    .logo {
        height: var(--size-13);
    }

    .menu-logo {
        height: var(--size-9);
        padding: var(--size-2);
    }

    @media (max-width: 768px) {
        .menu-logo {
            display: none;
        }
    }


</style>